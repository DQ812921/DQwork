<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RelativeActivity">

    <Button
        android:id="@+id/btn_center"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:text="C"
        android:layout_centerInParent="true" />

    <Button
        android:id="@+id/btn_upper"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:text="U"
        android:layout_above="@id/btn_center"
        android:layout_centerHorizontal="true"/>

    <Button
        android:id="@+id/btn_down"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_below="@id/btn_center"
        android:text="D"
        android:layout_centerHorizontal="true"/>

    <Button
        android:id="@+id/btn_left"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:text="L"
        android:layout_toLeftOf="@id/btn_center"
        android:layout_centerVertical="true"/>

    <Button
        android:id="@+id/btn_right"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:text="R"
        android:layout_toRightOf="@id/btn_center"
        android:layout_centerVertical="true"/>


    <TextView
        android:id="@+id/view_upper"
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:visibility="invisible"
        android:text="@string/upper"
        android:background="@color/blue"/>

    <TextView
        android:id="@+id/view_down"
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:visibility="invisible"
        android:text="@string/down"
        android:background="@color/blue"/>

    <TextView
        android:id="@+id/view_left"
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:gravity="center"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:visibility="invisible"
        android:text="@string/left"
        android:background="@color/blue"/>

    <TextView
        android:id="@+id/view_right"
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:gravity="center"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:visibility="invisible"
        android:text="@string/right"
        android:background="@color/blue"/>
